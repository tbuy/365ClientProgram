.classify{
  display: flex;
  color: rgb(87, 87, 87);
}
.leftMenu {
  width: 30%;
  background-color: #f8f8f8;
  overflow-y: auto;
  height: 100vh;
}
.menuItem{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.item-active {
  background-color: #fff;
  color: #ff7832;
  border-left: 8rpx solid #ff7832;
}
.rightContent {
  width: 80%;
    padding: 20rpx;
  box-sizing: border-box;

    overflow-y: auto;
  height: 100vh;
}
image {
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}
.item {
  width: 100%;
  display: flex;
  margin-top: 40rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}
.itemName {
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  font-size: 22rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 20rpx;

}
