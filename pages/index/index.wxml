<view class='container-p'>

  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{adBanner}}" wx:key="{{item.id}}">
      <swiper-item>
        <image src="{{item.url}}" class="slide-image" bindtap="goAdPositionContent" data-item="{{item}}"/>
      </swiper-item>
    </block>
  </swiper>

  <view class="nav">
    <view wx:for="{{navContent}}" wx:key="{{item.id}}" class="nav-item" bindtap="goItem">
      <image src="{{item.image}}"></image>
      <text>{{item.name}}</text>
    </view>
  </view>

  <view class="centerAd">
    <image src="{{adMiddle[0].url}}" bindtap="goAdPositionContent" data-item="{{adMiddle[0]}}"></image>
  </view>

  <view class="hotRecommend">
    <view class="title">热门推荐</view>
    <view class="hotImage">
      <image src="{{adRecommend1[0].url}}" bindtap="goAdPositionContent" data-item="{{adRecommend1[0]}}"></image>
      <image src="{{adRecommend2[0].url}}" bindtap="goAdPositionContent" data-item="{{adRecommend2[0]}}"></image>
    </view>
  </view>

  <view class="videoRecommend">
      <view class="title">视频推荐</view>
    <video id="myVideo" poster="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1570731011450&di=5e2850bb705c92118053468b980ac946&imgtype=0&src=http%3A%2F%2Fb-ssl.duitang.com%2Fuploads%2Fitem%2F201412%2F27%2F20141227124805_KuZ2Y.jpeg" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400"
      controls></video>
  </view>
</view>