<view class='userPage'>

  <view class='topContainer'>
    <view class='image'>
      <image class="avatar-image public_avatar" src="/images/avatar.jpg"></image>
    </view>
    <view class='name'>
      <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" class='login'>请点击登录</button>
    </view>
  </view>

  <view class='bottomContainer'>
    <view wx:for="{{menuList}}" wx:key="{{item.id}}" class='item' bindtap="goItem" data-router="{{item.router}}">{{ item.title }}</view>
  </view>
  
</view>