/* pages/myOrder/myOrder.wxss */

.tab {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 5rpx 5rpx 10rpx #f5f5f5;
  color: rgb(87, 87, 87);
}

.tab-item {
  width: 160rpx;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.tab-item-active {
  color: #ff7832;
  border-bottom: 6rpx solid #ff7832;
}

.list {
  font-size: 30rpx;
  color: rgb(87, 87, 87);
}

.list-item {
  border-bottom: 1rpx solid #f5f5f5;
  box-shadow: 5rpx 10rpx 10rpx #f5f5f5;
}
.item-number {
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.item-content {
padding: 30rpx;
font-size: 26rpx;
position: relative;
}
.item-content view {
  margin-top: 20rpx;
}
.item-time {
  color: #999;
}
.item-detail {
  font-size: 34rpx;
  margin-top: 0!important;
  display: flex;
  justify-content: space-between;
}
.price {
  color: #ff7832;
  font-size: 28rpx;
}
.call {
  padding: 8rpx 16rpx;
  border: 1rpx solid rgb(114, 113, 113);
  color: rgb(114, 113, 113);
  border-radius: 10rpx;
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  font-size: 26rpx;
}
