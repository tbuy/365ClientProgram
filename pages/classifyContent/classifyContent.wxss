.tab {
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}
.tab-item {
  width: 50%;
  text-align: center;
}
.item-active {
  color: #ff7832;
  border-bottom: 5rpx solid #ff7832;
}
swiper {
    width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.slide-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}
.list {
  margin-top: 20rpx;

}
.list-item {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 40rpx 20rpx;
}
.item {
  overflow: hidden;
}
.item-image {
  float: left;
}
.intro {
  float: left;
  margin-left: 40rpx;
  margin-top: 10rpx;
}
.btn {
  float: right;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
.btn::after {
  border: 0 none;
}
.remark {
  padding: 20rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
  border-radius: 8rpx;
}


.image {
  width: 100%;
  height: 200rpx;
}
.title {
  text-align: center;
  margin-top: 40rpx;
}
input {
  margin: 50rpx auto;
  width: 540rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  padding: 20rpx 30rpx;
}


.button {
  margin-top: 40rpx;
  width: 600rpx;
}
.button::after{
  border: 0 none;
}
.formMark {
  width:100%;
  height:100%;
  position:fixed;
  background-color: rgba(0,0,0,0.5);
  z-index:9999;
  top:0;
  left:0;
}
.form {
  width: 100%;
  background-color: #fff;
  padding: 30rpx 0 50rpx;
  bottom: 0;
  position: absolute;
}

.close {
  position: absolute;
  background-color: pink;
  left: 10rpx;
  top: 10rpx;
}