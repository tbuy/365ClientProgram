<wxs src="./../filter.wxs" module="filter" />
<view class="contract">
  <view class="status theme_btn">{{contract.type == 1?'待执行':contract.type == 2?'执行中':'已终止'}}</view>
  <view class="public-card">
    <view class="title">合同信息</view>
    <view class="public">
      <view>合同流水号</view>
      <view>{{contract.contract_code}}</view>
    </view>
    <view class="public">
      <view>合同编号</view>
      <view>{{contract.contract_number}}</view>
    </view>
  </view>
  <view class="public-card">
    <view class="title">雇主信息</view>
    <view class="public">
      <view>姓名</view>
      <view>{{contract.sign_user_name}}</view>
    </view>
    <view class="public">
      <view>联系电话</view>
      <view>{{contract.sign_user_phone}}</view>
    </view>
    <view class="public">
      <view>身份证号</view>
      <view>{{contract.sign_user_identify}}</view>
    </view>
  </view>
  <view class="public-card">
    <view class="title">服务信息</view>
    <view class="public">
      <view>姓名</view>
      <view>{{contract.sign_staff_name}}</view>
    </view>
    <view class="public">
      <view>联系电话</view>
      <view>{{contract.sign_staff_phone}}</view>
    </view>
    <view class="public">
      <view>身份证号</view>
      <view>{{contract.sign_staff_identify}}</view>
    </view>
    <view class="public">
      <view>家庭住址</view>
      <view>{{contract.sign_staff_cur_address}}</view>
    </view>
    <view class="public">
      <view>服务期</view>
      <view>{{filter.formatDateDay(contract.service_start)}} 至 {{filter.formatDateDay(contract.service_end)}}</view>
    </view>
  </view>
  <view class="public-card">
    <view class="title">签约信息</view>
    <view class="public">
      <view>姓名</view>
      <view>{{contract.sign_manager_name}}</view>
    </view>
    <view class="public">
      <view>签约时间</view>
      <view>{{filter.formatDate(contract.sign_at)}}</view>
    </view>
  </view>
  <view class="public-card">
    <view class="title">保险</view>
    <view class="public">
      <view>保险受益人</view>
      <view>{{contract.insurance_benefit}}</view>
    </view>
    <view class="public">
      <view>保险期</view>
      <view>{{filter.formatDateDay(contract.insurance_start)}} 至 {{filter.formatDateDay(contract.insurance_end)}}</view>
    </view>
  </view>
  <view class="public-card">
    <view class="title">费用明细</view>
    <view class="public">
      <view>劳务报酬</view>
      <view>{{contract.staff_wage}} 元</view>
    </view>
    <view class="public">
      <view>服务费</view>
      <view>{{contract.user_charge}} 元</view>
    </view>
    <view class="public">
      <view>总费</view>
      <view>{{contract.user_pay}} 元</view>
    </view>
    <view class="public">
      <view>是否已发放</view>
      <view>{{contract.is_wage == 1?'否':'是'}}</view>
    </view>
  </view>
  <view class="public-card">
    <view class="title">备注</view>
    <view class="remarks">{{contract.remarks}}</view>
  </view>
  <view wx:for="{{contract.files}}" wx:key="{{item.id}}">
    <image src="{{item.url}}"></image>
  </view>
</view>