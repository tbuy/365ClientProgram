.wrap {
  height: 100%;
  padding: 200rpx 80rpx;
  box-sizing: border-box;
}

.input {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #f5f5f5;
  margin-bottom: 30rpx;
  width: 100%;
  padding-left: 100rpx;
  box-sizing: border-box;
  position: relative;
  border-radius: 40rpx;
  font-size: 30rpx;
}

image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 40rpx;
  top: 20rpx;
}

input {
  height: 80rpx;
}

.getCode {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  line-height: 40rpx;
  color: #ccc;
  font-size: 26rpx;
  z-index: 2;
}


